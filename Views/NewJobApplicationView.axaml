<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:JobApplications.ViewModels"
        x:DataType="vm:CompanyViewModel"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="JobApplications.Views.NewJobApplicationView"
        FontSize="16"
        Title=" " Width="500" Height="250" CornerRadius="0,0,5,5" CanResize="False">
    <Window.DataContext>
        <vm:CompanyViewModel></vm:CompanyViewModel>
    </Window.DataContext>
    <Border CornerRadius="0,0,5,5">
        <StackPanel>
            <TextBox Watermark="Companyname" Text="{Binding CompanyName, Mode=TwoWay}"></TextBox>
            <TextBox Watermark="Contact" Text="{Binding Contact, Mode=TwoWay}"></TextBox>
            <TextBox Watermark="Email" Text="{Binding Email, Mode=TwoWay}"></TextBox>
            <TextBox Watermark="Address" Text="{Binding Address, Mode=TwoWay}"></TextBox>
            <TextBox Watermark="Job" Text="{Binding Job, Mode=TwoWay}"></TextBox>
            <DockPanel HorizontalAlignment="Center"
                       Margin="0,30,0,0">
                <DockPanel.Styles>
                    <Style Selector="Button">
                        <Setter Property="Width" Value="100"></Setter>
                        <Setter Property="Height" Value="50"></Setter>
                        <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
                        <Setter Property="VerticalContentAlignment" Value="Center"></Setter>
                    </Style>
                </DockPanel.Styles>
                <Button Margin="0,0,10, 0" Click="SaveNewApplication">Save</Button>
                <Button Margin="10,0,0,0" Click="CloseWindow">Abort</Button>
            </DockPanel>
        </StackPanel>
    </Border>
</Window>
